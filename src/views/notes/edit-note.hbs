<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="mb-3">
                    <input type="text" name="title" class="form-control" value="{{note.title}}" placeholder="Title">
                </div>
                <div class="mb-3">
                    <textarea name="description" class="form-control" cols="30" rows="10"
                        placeholder="Description">{{note.description}}</textarea>
                </div>
                <div class="mb-1 d-grid gap-2">
                    <button class="btn btn-primary btn-block">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>